<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#81c784" />
            <gradient android:angle="-90" android:startColor="#81c784" android:endColor="#81c784"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4caf50" />
            <solid android:color="#4caf50"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4caf50" />
            <gradient android:angle="-90" android:startColor="#4caf50" android:endColor="#4caf50" />
        </shape>
    </item>
</selector>